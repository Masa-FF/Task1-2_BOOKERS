<%= flash[:success] %>
<%= flash[:alert] %>

<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
    <h2>New Book</h2>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <br> <%= f.submit 'Update Book' %>
    <%= render 'layouts/error_messages', book: @book %>
<% end %>